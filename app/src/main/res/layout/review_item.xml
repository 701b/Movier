<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingVertical="10dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_person"
            android:background="@drawable/profile_image_circle_background"/>

        <TextView
            android:id="@+id/review_item_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="#444444"
            android:textSize="16sp"
            android:fontFamily="@font/yoongodic320"
            android:layout_marginHorizontal="10dp"/>

        <ImageView
            android:id="@+id/review_item_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

        <ImageView
            android:id="@+id/review_item_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

        <ImageView
            android:id="@+id/review_item_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

        <ImageView
            android:id="@+id/review_item_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

        <ImageView
            android:id="@+id/review_item_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

    </LinearLayout>

    <TextView
        android:id="@+id/review_item_review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 내용"
        android:textColor="#444444"
        android:textSize="16sp"
        android:fontFamily="@font/yoongodic320"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/review_item_thumb_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_thumb_up"
            android:background="#FFFFFF"/>

        <TextView
            android:id="@+id/review_item_thumb_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:textColor="#444444"
            android:textSize="14sp"
            android:fontFamily="@font/yoongodic320"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

</LinearLayout>