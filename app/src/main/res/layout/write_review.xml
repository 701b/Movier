<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/write_review_star_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_big_empry_star_grey" />

            <ImageView
                android:id="@+id/write_review_star_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_big_empry_star_grey" />

            <ImageView
                android:id="@+id/write_review_star_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_big_empry_star_grey" />

            <ImageView
                android:id="@+id/write_review_star_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_big_empry_star_grey" />

            <ImageView
                android:id="@+id/write_review_star_image5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_big_empry_star_grey" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/write_review_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fontFamily="@font/yoongodic320"
        android:text=""
        android:hint="리뷰 작성"
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:gravity="top"
        android:textColor="#444444"
        android:textCursorDrawable="@drawable/red_cursor"
        android:textSize="16sp"
        android:layout_marginTop="2dp"/>

    <LinearLayout
        android:id="@+id/write_review_write_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/yoongodic320"
                android:text="리뷰 작성"
                android:textColor="#444444"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>