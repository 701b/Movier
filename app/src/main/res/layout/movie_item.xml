<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_item"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/movie_item_background">

    <ImageView
        android:id="@+id/movie_item_poster_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_no_image"
        android:scaleType="center"
        android:layout_margin="1dp"/>

    <TextView
        android:id="@+id/movie_item_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bottom_grey_border_white_background"
        android:fontFamily="@font/yoongodic320"
        android:paddingBottom="5dp"
        android:text="타이틀"
        android:textColor="#222222"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star_red" />

        <TextView
            android:id="@+id/movie_item_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yoongodic320"
            android:text="5.0"
            android:textColor="#FF0000"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/movie_item_pub_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textColor="#222222"
        android:fontFamily="@font/yoongodic320"
        android:textSize="14sp"
        android:layout_marginStart="11dp"
        android:paddingTop="2dp"/>

</LinearLayout>