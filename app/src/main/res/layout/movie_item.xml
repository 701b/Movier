<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_item_poster_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:srcCompat="@drawable/ic_video_label" />

    <TextView
    android:id="@+id/movie_item_title_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="타이틀"
    android:textColor="#222222"
    android:fontFamily="@font/yoongodic320"
    android:textSize="20sp"
    android:paddingHorizontal="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/movie_item_star_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/movie_item_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yoongodic320"
            android:text="5.0"
            android:textColor="#FF0000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/movie_item_pub_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textColor="#222222"
        android:fontFamily="@font/yoongodic320"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp"/>

</LinearLayout>